{% extends 'template.front.html.twig' %}

{% block main %}
    {% block topbanner %}
        <section class="breadcrumb breadcrumb_bg align-items-center">
            <div class="container">
                <div class="row align-items-center justify-content-between">
                    <div class="col-sm-6">
                        <div class="breadcrumb_tittle text-left">
                            <h2>Article details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- breadcrumb start-->
    {% endblock %}
    <!--================Blog Area =================-->
    <section class="blog_area single-post-area all_post section_padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 posts-list">

                    {% block singlePost %}
                        <div class="single-post">
                            <div class="feature-img">
                                <img class="img-fluid" src="{{ asset('img/blog/single_blog_1.png') }}" alt="">
                            </div>
                            <div class="blog_details">
                                <h2>{{ article.title }}
                                </h2>
                                <ul class="blog-info-link mt-3 mb-4">
                                    {% for section in article.sections %}
                                        <li><a href="{{ path("section", {'slug': section.sectionSlug }) }}"><i class="far fa-user"></i> {{ section.sectionTitle }}</a></li>
                                    {% else %}
                                        <p>Pas de Section</p>
                                    {% endfor %}
                                    <br>
                                    <hr>
                                    <p class="excert">{{ article.text }} </p>
                                    <li>Ecrit par <i class="far fa-user"></i> {{ article.User.username }}</li>
                                    <li>Le <i class="far fa-comments"></i> {{ article.articleDateCreate ? article.articleDateCreate|date("d/m/Y \à H:i") : '' }}</li>
                                </ul>

                            </div>
                        </div>
                    {% endblock %}

                    {% block comments %}

                        <div class="comments-area">
                            <h4>05 Comments</h4>
                            <div class="comment-list">
                                {% for comment in article.comments %}
                                <div class="single-comment justify-content-between d-flex">
                                    <div class="user justify-content-between d-flex">

                                            {% if comment.parent == null %}
                                        <div class="thumb">
                                            <img src="img/comment/comment_1.png" alt="">
                                        </div>
                                        <div class="desc">
                                            <p class="comment">
                                                {{ comment.content|raw }}
                                            </p>
                                            <div class="d-flex justify-content-between">
                                                <div class="d-flex align-items-center">
                                                    <h5>
                                                        Commenté par {{ comment.name }} le {{ comment.createdAt|date("d/m/Y \à H:i") }}
                                                    </h5>
                                                </div>
                                                <div class="reply-btn">
                                                    <a href="#ajout-commentaire" data-reply data-id="{{ comment.id }}" class="btn-reply text-uppercase">reply</a>
                                                </div>
                                            </div>
                                        </div>

                                        {% for reply in comment.replies %}
                                            <div class="desc">
                                                <p class="comment">
                                                    {{ reply.content|raw }}
                                                </p>
                                                <div class="d-flex justify-content-between">
                                                    <div class="d-flex align-items-center">
                                                        <h5>
                                                            Reponse par {{ reply.name }} le {{ reply.createdAt|date("d/m/Y \à H:i") }}
                                                        </h5>
                                        {% endfor %}
                                                    </div>
                                                </div>
                                            </div>


                                        {% endif %}

                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        </div>

                    {% endblock %}

                    {% block commentForm %}
                        <div id="ajout-commentaire">
                            {{ form(commentForm) }}
                        </div>

                    {% endblock %}
                </div>
                {% block sideWidget %}
                    <div class="col-lg-4">
                        <div class="sidebar_widget">
                            <div class="single_sidebar_wiget">
                                <div class="sidebar_tittle">
                                    <h3>Sections</h3>
                                </div>
                                <div class="single_catagory_item category">
                                    <ul class="list-unstyled">
                                        {% for section in sections %}
                                        <li><a href="{{ path("section", { 'slug': section.sectionSlug}) }}">{{ section.sectionTitle }}</a> <span>(15)</span> </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endblock %}
            </div>
        </div>
    </section>

