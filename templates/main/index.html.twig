{% block main %}
    {% block mainBanner %}
    <!-- banner post start-->
    <section class="banner_post">
        <div class="container-fluid mb-5">
            <div class="row justify-content-between">
                {% for articleB in articleBanner %}
                <div class="banner_post_1 banner_post_bg_1">
                    <img src="{{ asset('img/banner_blog/banner_blog_1.png') }}" alt="">
                    <div class="banner_post_iner text-center">
                        {% for section in articleB.sections %}
                        <a href="{{ path("section", {'slug': section.sectionSlug }) }}"><h5> {{ section.sectionTitle }}</h5></a>
                        {% else %}
                            <h3>Pas de section</h3>
                        {% endfor %}
                        <a href="{{ path("article", {'slug': articleB.titleSlug }) }}"><h2>{{ articleB.title }}</h2></a>
                        <p>{{ articleB.User.fullname }} - le {{ articleB.articleDatePosted|date("d/m/Y \à H:i") }}</p>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <!-- banner post end-->
    {% endblock %}

