                <div class="col-lg-6 col-sm-6">
                    <div class="single_post post_1">
                        <div class="single_post_img">
                            <img src="{{ asset('img/post/post_12.png') }}" alt="">
                        </div>
                        <div class="single_post_text text-center">
                            {% for section in article.sections %}
                            <a href="{{ path("section", {'slug': section.sectionSlug }) }}"><h5> {{ section.sectionTitle }}</h5></a>
                            {% else %}
                                <h3>Pas de section</h3>
                            {% endfor %}
                            <a href="{{ path("article", {'slug': article.titleSlug }) }}"><h2>{{ article.title }}</h2></a>
                            <p>{{ article.text|u.truncate(300, '...', false)|striptags }}<a class="text-decoration-none" href="{{ path("article", { 'slug' :  article.titleSlug }) }}">
                                    Lire la suite
                                    <i class="bi bi-arrow-right"></i>
                                </a></p>
                            <p><a href="{{ path("articleUser", {'user': article.User }) }}">{{ article.User.fullname }}</a> - le {{ article.articleDatePosted|date("d/m/Y \à H:i") }}</p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    {% endblock %}

